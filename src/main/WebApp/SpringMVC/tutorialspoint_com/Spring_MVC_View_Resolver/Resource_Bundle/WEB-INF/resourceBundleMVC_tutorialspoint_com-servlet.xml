<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="spring_mvc.tutorialspoint_com.spring_mvc_view_resolver.resource_bundle"/>

    <bean class = "org.springframework.web.servlet.view.ResourceBundleViewResolver">
        <property name = "basename" value = "SpringMVC/tutorialspoint_com/Spring_MVC_View_Resolver/Resource_Bundle/views" />
    </bean>

</beans>