<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="message" class="spring_framework.proselyte_net.lesson_07.bean_post_processor.Message"
          init-method="init" destroy-method="destroy">
        <property name="message" value="This is simple message."/>
    </bean>

    <bean class="spring_framework.proselyte_net.lesson_07.bean_post_processor.BeanPostProcessorImpl"/>

</beans>